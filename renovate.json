{
  "bumpVersion": "patch",
  "commitMessagePrefix": "[renovate] ",
  "groupName": "NPM dependencies",
  "labels": ["renovate"],
  "rangeStrategy": "bump",
  "node": {
    "major": {
      "enabled": true
    }
  },
  "packageRules": [
    {
      "groupName": "TravisCI",
      "managers": [
        "travis"
      ]
    },
    {
      "groupName": "gatsby",
      "managerBranchPrefix": "gatsby",
      "packagePatterns": [
        "gatsby"
      ],
      "rangeStrategy": "pin"
    }
  ],
  "schedule": [
    "before 3am on the first day of the month"
  ]
}
